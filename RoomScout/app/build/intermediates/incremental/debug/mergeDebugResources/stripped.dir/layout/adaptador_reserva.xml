<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNombreHotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/marron_grisaceo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFechaIda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/marron_grisaceo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreHotel"
        app:layout_constraintEnd_toStartOf="@+id/tvFechaVuelta"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tvFechaVuelta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/marron_grisaceo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNombreHotel"
        app:layout_constraintStart_toEndOf="@+id/tvFechaIda"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tvPersonas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/marron_grisaceo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFechaIda"
        app:layout_constraintEnd_toStartOf="@+id/tvPrecio"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/marron_grisaceo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFechaVuelta"
        app:layout_constraintStart_toEndOf="@+id/tvPersonas"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textColor="@color/marron_grisaceo"
        android:background="@null"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrecio"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/rosa_empolvado"
        app:layout_constraintTop_toBottomOf="@id/btnCancelar"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>