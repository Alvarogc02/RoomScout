<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoomScout" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Agrega cualquier atributo de estilo personalizado que desees -->
        <item name="materialCalendarFullscreenTheme">@style/MyCalendarTheme</item>
    </style>

    <!-- Define el tema personalizado para el calendario -->
    <style name="MyCalendarTheme" parent="@style/Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/rosa_empolvado</item>
        <item name="colorOnPrimary">@color/rosa_suave</item>
        <item name="android:textColorPrimary">@color/marron_grisaceo</item>
        <!-- Agrega cualquier otro atributo de estilo personalizado que desees -->
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
    </style>

</resources>